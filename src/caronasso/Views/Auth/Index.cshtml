@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
@model caronasso.Models.ViewModels.LoginCadastroViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Caronasso</title>
    <link rel="stylesheet" href="~/assets/css/global.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="content first-content">
            <div class="first-column">
                <h2 class="title title-primary">Bem Vindo de Volta ao Caronasso</h2>
                <p class="description description-primary">Para continuar conectado conosco,</p>
                <p class="description description-primary">Por favor, faça login com suas informações pessoais.</p>
                <button id="signin" class="btn btn-primary">Entrar</button>
            </div>    
            <div class="second-column">
                <h2 class="title title-second">Crie sua Conta</h2>
                <div class="imagem-placa">
                    <a asp-controller="Home" asp-action="Index"><img src="~/assets/img/CARONASSO - FIGMA.svg" alt=""></a>
                </div><!-- imagem-placa-->
                <p class="description description-second">Use seu e-mail institucional para registro:</p>
                <form asp-action="Cadastrar" class="form">
                    <label class="label-input" for="">
                        <i class="far fa-user icon-modify"></i>
                        <input asp-for="Cadastro.Nome" type="text" placeholder="Nome Completo">
                        <span asp-validation-for="Cadastro.Nome" class="text-danger"></span>
                    </label>
                    
                    <label class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        <input asp-for="Cadastro.Email" type="email" placeholder="@@sga.pucminas.br">
                        <span asp-validation-for="Cadastro.Email" class="text-danger"></span>
                    </label>
                    
                    <label class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        <input asp-for="Cadastro.Senha" type="password" placeholder="Password">
                        <span asp-validation-for="Cadastro.Senha" class="text-danger"></span>
                    </label>

                    <label class="label-input" for="">
                        <i class="fa-thin fa-graduation-cap"></i>
                        @* <input asp-for="Cadastro.Curso" type="text" list="my-options" placeholder="Selecione seu Curso"> *@
                        @* <datalist asp-items="Html.GetEnumSelectList<caronasso.Models.Enums.Curso>()" id="my-options">
                            <option value="Administração" />
                            <option value="Biomedicina" />
                            <option value="Ciências Contábeis" />
                            <option value="Direito" />
                            <option value="Medicina" />
                            <option value="Sistemas de Informação" />
                            <option value="Tecnologia em Análise e Desenvolv. de Sistemas" />
                        </datalist> *@
                        <select asp-items="Html.GetEnumSelectList<caronasso.Models.Enums.Curso>()" asp-for="Cadastro.Curso"></select>
                        <span asp-validation-for="Cadastro.Curso" class="text-danger"></span>
                    </label>
                    
                    
                    <button type="submit" class="btn btn-second">Cadastrar</button>     
                    <p>@ViewBag.CadastroMsg</p>
                </form>
            </div><!-- second column -->
        </div><!-- first content -->
        <div class="content second-content">
            <div class="first-column">
                <h2 class="title title-primary">Caronasso!</h2>
                <p class="description description-primary">Digite seus dados pessoais</p>
                <p class="description description-primary">e comece sua jornada conosco.</p>
                <button id="signup" class="btn btn-primary">Cadastrar</button>
            </div>
            <div class="second-column">
                <h2 class="title title-second">Entrar no Caronasso</h2>
                
                <p class="description description-second">Use sua conta de e-mail institucional:</p>
                <form asp-action="Login" class="form">
                
                    <label class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        <input asp-for="Login.Email" type="email" placeholder="@@sga.pucminas.br">
                        <span asp-validation-for="Login.Email" class="text-danger"></span>
                    </label>
                
                    <label class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        <input asp-for="Login.Senha" type="password" placeholder="Password">
                        <span asp-validation-for="Login.Senha" class="text-danger"></span>
                    </label>
                
                    <a class="password" href="#">Esqueceu sua senha?</a>
                    <button class="btn btn-second">Entrar</button>
                    <p>@ViewBag.LoginMsg</p>
                </form>
            </div><!-- second column -->
        </div><!-- second-content -->
    </div>

    <script src="~/assets/js/script.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
