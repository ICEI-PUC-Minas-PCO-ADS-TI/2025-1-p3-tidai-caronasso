<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/assets/css/home.css"/>
    <link rel="stylesheet" href="~/assets/css/globalHeader.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="~/assets/js/profile.globalheader.js" defer></script>
</head>
<body>
    <header id="global-header">
        <nav class="nav-bar">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index"><img class="logoimg" src="~/assets/img/CARONASSO - FIGMA.svg" alt=""></a>
            </div>
            <div class="nav-list">
                <ul>
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Caronas" asp-action="Create" class="nav-link">Motorista</a></li>
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Caronas" asp-action="Index" class="nav-link">Passageiro</a></li>
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Home" asp-action="About" class="nav-link">Sobre Nós</a></li>
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Usuarios" asp-action="Details" asp-route-id=@null class="nav-link">Perfil</a></li>
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Chats" asp-action="Index" class="nav-link">Chats</a></li>
                </ul>
            </div>
            <div class="login-button">
                @if (User.Identity.IsAuthenticated)
                {
                    <button><a asp-controller="Auth" asp-action="Logout">Logout</a></button>
                } else
                {
                    <button><a asp-controller="Auth" asp-action="Index">Login</a></button>
                }
            </div>

            <div class="mobile-menu-icon">
                <button onclick="menuShow()"><img class="icon" src="~/assets/img/menu_white_36dp.svg" alt=""></button>
            </div>
        </nav>
        <div class="mobile-menu">
            <ul>
                <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Caronas" asp-action="Create" class="nav-link">Motorista</a></li>
                <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Caronas" asp-action="Index" class="nav-link">Passageiro</a></li>
                @* @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Auth" asp-action="Logout" class="nav-link">Logout</a></li>
                } else
                {
                    <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Auth" asp-action="Index" class="nav-link">Cadastre</a></li>
                } *@
                <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Home" asp-action="About" class="nav-link">Sobre</a></li>
                <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Usuarios" asp-action="Details" asp-route-id=@null class="nav-link">Perfil</a></li>
                <li class="nav-item"><a style="color: white; font-size: 1.15rem" asp-controller="Chats" asp-action="Index" class="nav-link">Chats</a></li>
            </ul>

            <div class="login-button">
                @if(User.Identity.IsAuthenticated)
                {
                    <button><a asp-controller="Auth" asp-action="Logout">Sair</a></button>
                } else
                {
                    <button><a asp-controller="Auth" asp-action="Index">Cadastre</a></button>
                }
            </div>
        </div>
    </header>

    <bodyrendered role="main">
        @RenderBody()
    </bodyrendered>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>